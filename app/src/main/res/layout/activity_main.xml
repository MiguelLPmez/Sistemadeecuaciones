<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:gravity="center"
            android:text="Insert the coefficients"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/a11"
                android:layout_width="20px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="a11"
                android:inputType="number|numberSigned" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="5px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="x1 +" />

            <EditText
                android:id="@+id/a12"
                android:layout_width="20px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="a12"
                android:inputType="number|numberSigned" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="5px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="x2 +" />

            <EditText
                android:id="@+id/a13"
                android:layout_width="20px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="a13"
                android:inputType="number|numberSigned" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="10px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="x3 = " />

            <EditText
                android:id="@+id/b1"
                android:layout_width="20px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="b1"
                android:inputType="number|numberSigned" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/a21"
                android:layout_width="20px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="a21"
                android:inputType="number|numberSigned" />

            <TextView
                android:id="@+id/textView34"
                android:layout_width="5px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="x1 +" />

            <EditText
                android:id="@+id/a22"
                android:layout_width="20px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="a22"
                android:inputType="number|numberSigned" />

            <TextView
                android:id="@+id/textView51"
                android:layout_width="5px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="x2 +" />

            <EditText
                android:id="@+id/a23"
                android:layout_width="20px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="a23"
                android:inputType="number|numberSigned" />

            <TextView
                android:id="@+id/textView61"
                android:layout_width="10px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="x3 = " />

            <EditText
                android:id="@+id/b2"
                android:layout_width="20px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="b2"
                android:inputType="number|numberSigned" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/a31"
                android:layout_width="20px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="a31"
                android:inputType="number|numberSigned" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="5px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="x1 +" />

            <EditText
                android:id="@+id/a32"
                android:layout_width="20px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="a32"
                android:inputType="number|numberSigned" />

            <TextView
                android:id="@+id/textView52"
                android:layout_width="5px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="x2 +" />

            <EditText
                android:id="@+id/a33"
                android:layout_width="20px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="a33"
                android:inputType="number|numberSigned" />

            <TextView
                android:id="@+id/textView62"
                android:layout_width="10px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="x3 = " />

            <EditText
                android:id="@+id/b3"
                android:layout_width="20px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="b3"
                android:inputType="number|numberSigned" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:gravity="center"
            android:text="Set the conditions"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X0 =" />

            <EditText
                android:id="@+id/x0"
                android:layout_width="20px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number|numberSigned|numberDecimal" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="20px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center"
                android:text="Y0 =" />

            <EditText
                android:id="@+id/y0"
                android:layout_width="20px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number|numberSigned|numberDecimal" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="20px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Z0 =" />

            <EditText
                android:id="@+id/z0"
                android:layout_width="20px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number|numberSigned|numberDecimal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="tol =" />

            <EditText
                android:id="@+id/tol"
                android:layout_width="20px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number|numberDecimal" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="itmax =" />

            <EditText
                android:id="@+id/itmax"
                android:layout_width="20px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:gravity="center"
            android:text="Select a Method"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rGroupMetodo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/jacobi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="rGroupPerformed"
                android:layout_weight="1"
                android:text="Jacobi" />

            <RadioButton
                android:id="@+id/gauss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="rGroupPerformed"
                android:layout_weight="1"
                android:text="Gauss-Seidel" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:gravity="center"
            android:text="Results"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/resultx1"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:text="X1: "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/resultx2"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:text="X2:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/resultx3"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:gravity="center_vertical"
            android:text="X3:"
            android:textSize="16sp" />

        <Button
            android:id="@+id/botonCalcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="calculatePerformed"
            android:text="Calculate"
            android:enabled="false"
            android:textAllCaps="true" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>